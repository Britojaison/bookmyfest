<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>profile</title>
  <link rel="stylesheet" href="/styles/profile.css" />
</head>

<body>
  <div class="topnav">
    <div id="title">
      <a href="/logo-home"><img src="/images/BookMyShow.png" alt="image" /></a>
    </div>
    <div class="profile-image">
      <img src="/images/example.png" alt="Profile Image" class="profile_photo" />
      <div class="options">
        <a href="/about">About</a>
        <a href="/">Logout</a>
      </div>
    </div>
  </div>
  <div class="welcome">
    <div class="user-image">
      <img src="/images/example.png" alt="" />
    </div>
    <div class="user-info">
      <h1>Welcome <%= user %>
      </h1>
    </div>
  </div>

  <div class="header">
    <h1 style="font-family: Helvetica, sans-serif">Upcoming Events</h1>
    <p><a href="/seemore-upcomming">see more</a></p>
  </div>
  <div class="wrapper">
    <section id="section1">
      <%for(var i=0;i< eventid.length ;i++){%>
        <a href="/event/<%= eventid[i] %>">
          <div class="item">
            <img src="<%= posters[i]%>" alt="Describe Image" />
            <p>
              <%= event[i] %>
            </p>
          </div>
        </a>
        <%}%>
    </section>
  </div>

  <div class="header">
    <h1 style="font-family: Helvetica, sans-serif">Past Events</h1>
    <p><a href="/past-seemore">see more</a></p>
  </div>
  <div class="wrapper">
    <section id="section1">
      <%for(var i=0;i< pasteventid.length ;i++){%>
        <a href="/event/<%= pasteventid[i] %>">
          <div class="item">
            <img src="<%= pastposters[i]%>" alt="Describe Image" />
            <p>
              <%= pastevent[i] %>
            </p>
          </div>
        </a>
        <%}%>
    </section>
  </div>
  <footer>
    <div>+91 1234567890 <br />mail@christuniversity.in</div>
    <div>
      <a href="https://christuniversity.in/" id="link">christuniversity.in</a>
    </div>
    <div>PRIVACY POLICY</div>
  </footer>
</body>

</html>